<h1>Current Matches</h1>

<% for match in @matches %>

  <table>
    <tr>
      <td rowspan="4" class="avatar">
        <%= display_user_avatar(match.admin, :large) %>
      </td>
      <td colspan="2" class="match-name">
        <%= link_to h(match.name), match %>
      </td>
      <tr>
        <td class="date-start">
          <strong>Start of Play:</strong> <%= match.created_at.strftime("%b %d, %Y") %>
        </td>
        <td class="date-updated">
          <strong>Last Serve:</strong> 
			<%- if match.volleys.complete.any? -%>
			<%= match.volleys.complete.last.completed_at.strftime("%b %d, %Y") %>
			<%- else -%>
			No volleys completed yet.
			<%- end -%>
        </td>
      </tr>
      <tr>
         <td class="players" colspan="2">
           <strong>Players:</strong> <%= match.players.map(&:name).join(", ") %>
        </td>
      </tr>
    </table>
        
        
              
<% end %>


<br />

<%= will_paginate @matches %>

<%- if logged_in? -%>
<p>
  <%= link_to("Setup a new match", new_match_path) %>
</p>
<%- end -%>